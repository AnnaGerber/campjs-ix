<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %> standalone" itemscope itemprop="blogPost">
  <header class="article-header">
    <h1><%= post.title %></h1>
    <% if(post.description) { %><p class="lead typo"><%= post.description %></p><% } %>
    <a href="<%- url_for(post.path) %>">
      <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, config.date_format) %></time>
    </a>
    <% if (post.categories && post.categories.length){ %>
      <div class="article-category">
        <%- list_categories(post.categories, {
          show_count: false,
          class: 'article-category',
          style: 'none',
          separator: 'â–º'
        }) %>
      </div>
    <% } %>
  </header>
  <div class="article-entry" itemprop="articleBody">
    <%- post.content %>
  </div>
</article>
